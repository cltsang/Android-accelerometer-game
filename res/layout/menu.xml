<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/root"
  android:padding="10dip" android:orientation="vertical">

	<ImageView
	  android:id="@+id/menu_resume_btn"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_margin="10dip"
	  android:layout_gravity="center"
	  android:layout_centerHorizontal="true"
	  android:src="@drawable/menu_resume"
	  />
	  
	<ImageView
	  android:id="@+id/menu_home_btn"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_margin="10dip"
	  android:layout_gravity="center"
	  android:layout_centerHorizontal="true"
	  android:src="@drawable/menu_home"
	  />
	  
	<ImageView
	  android:id="@+id/menu_selectlevel_btn"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_margin="10dip"
	  android:layout_gravity="center"
	  android:layout_centerHorizontal="true"
	  android:src="@drawable/menu_selectlevel"
	  />
	  
	<ImageView
	  android:id="@+id/menu_settings_btn"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_margin="10dip"
	  android:layout_gravity="center"
	  android:layout_centerHorizontal="true"
	  android:src="@drawable/menu_settings"
	  />
</LinearLayout>
