<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
    <View android:layout_weight="0.2" android:layout_height="fill_parent" android:layout_width="0dp" />
    
    <LinearLayout android:layout_weight="0.6" android:layout_height="fill_parent" android:layout_width="0dp" android:orientation="vertical" android:layout_gravity="center" android:gravity="center">
        <CheckBox android:layout_height="wrap_content" android:id="@+id/settings_fullscreen_checkbox" android:text="Full Screen" android:layout_width="wrap_content"></CheckBox>
        <SeekBar android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/settings_volumeLevel"></SeekBar>
    
    </LinearLayout>
    
    <View android:layout_weight="0.2" android:layout_height="fill_parent" android:layout_width="0dp" />
    
</LinearLayout>
